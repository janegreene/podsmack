<!DOCTYPE html>
<html>
  <head>
    <title>Podsmack</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

  </head>
  <style>
  footer {  position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color: clear;
    text-align: center;}
  </style>

  <body id="page-top" class="background-image"><div id="huntr-react-container-2"><!-- react-empty: 1 --></div>

    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="/">Podsmack</a>
        <button class="navbar-toggler navbar-toggler-right collapsed" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <% if current_user %>
              <a class="nav-link js-scroll-trigger" href="/dashboard">Dashboard</a>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to 'Browse', podcasts_path, class: "nav-link js-scroll-trigger" %>
            </li>
            <li class="nav-item">
              <% if current_user.nil? %>
                <a class="nav-link js-scroll-trigger" href="/login">Login/Register</a>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to 'About', '/about', class: "nav-link js-scroll-trigger" %>
            </li>
            <li class="nav-item">
              <% if current_user %>
                <a class="nav-link js-scroll-trigger" href="/logout">Logout</a>
               <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <%= render partial: 'flash', flash: flash %> 
    <%= yield %>
    
  </body>

</html>


