<%= form_for ([:user, @podcast]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>

  <%= f.label :location %>
  <%= f.select :location, ['Denver', 'NYC', 'Dallas', 'San Francisco'], :include_blank => true %> <br>

  <%= f.label :tags %>
  <%= f.collection_check_boxes(:tags, Tag.all, :id, :name, include_hidden: false) %> <br>

  <%= f.label :description %>
  <%= f.text_field :description %> <br>

  <%= f.label :patreon %>
  <%= f.text_field :patreon %> <br>

  <%= f.label :instagram %>
  <%= f.text_field :instagram %> <br>

  <%= f.label :facebook %>
  <%= f.text_field :facebook %> <br>

  <%= f.label :twitter %>
  <%= f.text_field :twitter %> <br>

  <%= f.label :podcast_uri %>
  <%= f.text_field :podcast_uri %> <br>

  <%= f.label :photo %>
  <%= f.text_field :photo %> <br>

  <%= f.label :adult_content %>
  <%= f.check_box :adult_content %> <br>

  <%= f.submit 'Submit' %>
<% end %>
