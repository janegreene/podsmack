<div class="jumbotron-jumbotron-fluid center-search">
  <h1 class="display-4">Podsmack</h1>
  <p class="lead">Your next favorite podcast is waiting to be found!</p>
  <hr class="my-4">
  <p>Select exactly what you're looking for.</p>
</div>
<br>
<br>
<br>



<%= form_tag(podcasts_path, method: "get") do %>
  <div class="container">
    <div class="row">

        <div class="col-sm center-search">
          <%= label_tag 'Location' %>
          <%= select_tag(:location, options_for_select([nil, 'Denver', 'NYC', 'Dallas', 'San Francisco']), { class: "btn btn-outline btn-xl js-scroll-trigger" })%>
        </div>

        <div class="col-sm center-search">
          <%= label_tag :tags %>
          <%= collection_check_boxes(:tags, :ids, Tag.all, :id, :name, include_hidden: false) do |box| %><br>
            <%= box.label {box.check_box + box.text} %>
          <% end %>
        </div>

        <div class="col-sm center-search">
          <%= label_tag 'Exclude Adult Content' %>
          <%= check_box_tag :adult_content, checked = false %>
        </div>

        <div class="col-sm center-search">
          <%= label_tag :name %>
          <%= text_field_tag :name %>
        </div>

    </div>
  </div>
  <br>
  <br>
  <div class='center-search'>
    <%= submit_tag 'Search' %>
  </div>
<% end %>
<br>
<br>
  <h3 class="center-search"> Podcast Collection </h3>
<br>
<br>
  <section class='podcast-browse center-search'>
    <h1><%= @podcasts.length %> Results </h1>
    <% @podcasts.each do |podcast| %>
      <section id='podcast_results'>
        <%= link_to podcast.name, podcast_path(podcast.id) %>
        <br>
        <%= raw(podcast.description).html_safe  %>
      </section>
    <% end %>
  </section>
